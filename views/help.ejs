<%- layout('/layout/boilerplate.ejs') %>

<style>

 .chat-toggle-btn {
    position: fixed;
    bottom: 25px;
    right: 30px;
    background-color: #007bff;
    border: none;
    color: white;
    font-size: 1.8rem;
    border-radius: 50%;
    width: 60px;
    height: 60px;
    box-shadow: 0 0 10px rgba(0,0,0,0.3);
    cursor: pointer;
    z-index: 9999;
  }

  .chatbot-container {
    position: fixed;
    bottom: 100px;
    right: 30px;
    width: 320px;
    height: 400px;
    background: white;
    border: 1px solid #ddd;
    border-radius: 12px;
    box-shadow: 0 0 10px rgba(0,0,0,0.2);
    display: none;
    flex-direction: column;
    overflow: hidden;
    font-family: sans-serif;
    z-index: 9999;
  }

  .chatbot-header {
    background: #007bff;
    color: white;
    padding: 10px;
    text-align: center;
    font-weight: bold;
    position: relative;
  }

  .chatbot-header .close-btn {
    position: absolute;
    right: 12px;
    top: 10px;
    cursor: pointer;
    font-weight: normal;
  }

  .chatbot-body {
    flex: 1;
    padding: 10px;
    overflow-y: auto;
  }

  .chatbot-input {
    display: flex;
    border-top: 1px solid #ddd;
  }

  .chatbot-input input {
    flex: 1;
    border: none;
    padding: 10px;
    outline: none;
  }

  .chatbot-input button {
    background: #007bff;
    color: white;
    border: none;
    padding: 10px 15px;
    cursor: pointer;
  }

  .bot-message, .user-message {
    margin: 5px 0;
    padding: 8px 12px;
    border-radius: 8px;
    max-width: 80%;
    clear: both;
  }

  .bot-message {
    background: #f1f1f1;
    float: left;
  }

  .user-message {
    background: #007bff;
    color: white;
    float: right;
  }

  .helpdesk-main {
    max-width: 1000px;
    margin: 60px auto;
    padding: 2rem;
    background: #fefefe;
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(0,0,0,0.1);
    font-family: "Segoe UI", sans-serif;
  }

  .hero-section {
    background: linear-gradient(to right, #007bff, #00bcd4);
    color: white;
    padding: 2rem;
    border-radius: 10px;
    text-align: center;
  }

  .hero-section h2 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .hero-section p {
    font-size: 1.1rem;
  }

  .helpdesk-sections {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-top: 2rem;
  }

  .helpdesk-card {
    background: #f8f9fa;
    border-radius: 10px;
    padding: 1.5rem;
    box-shadow: 0 0 10px rgba(0,0,0,0.05);
  }

  .helpdesk-card h3 {
    margin-bottom: 0.8rem;
    color: #007bff;
  }

  .helpdesk-card ul {
    list-style: disc;
    padding-left: 1.2rem;
    color: #555;
  }

  .chatbot-note {
    margin-top: 3rem;
    font-size: 0.9rem;
    color: #888;
    text-align: center;
  }

  @media(max-width: 768px) {
    .helpdesk-sections {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="helpdesk-main">
  <div class="hero-section">
    <h2>üÜò Welcome to LostLink Helpdesk</h2>
    <p>Need help reporting a lost item or claiming one? We‚Äôre here for you ‚Äî instantly.</p>
  </div>

  <div class="helpdesk-sections">
    <div class="helpdesk-card">
      <h3>üìã Common Topics</h3>
      <ul>
        <li>Reporting a lost or found item</li>
        <li>Understanding claim eligibility</li>
        <li>Account and login issues</li>
        <li>How OTP and Google Sign-In work</li>
      </ul>
    </div>
    <div class="helpdesk-card">
      <h3>üìë Terms & Policy</h3>
      <p>
        LostLink helps people reunite with their belongings. We verify each claim manually and do not guarantee recoveries. Any abuse of the system may result in user restrictions.
      </p>
    </div>
  </div>

  <div class="chatbot-note">
    üí° Tip: Ask the chatbot about ‚Äúlost items‚Äù, ‚Äúclaims‚Äù, or ‚ÄúOTP‚Äù ‚Äî it's trained to respond!
  </div>
</div>


<!-- Toggle Button -->
<button class="chat-toggle-btn" onclick="toggleChatbot()">üí¨</button>

<!-- Chatbot Box -->
<div class="chatbot-container" id="chatbot">
  <div class="chatbot-header">
    üí¨ Need Help?
    <span class="close-btn" onclick="toggleChatbot()">‚úñ</span>
  </div>
  <div class="chatbot-body" id="chat-body">
    <div class="bot-message">Hi! How can I assist you today?</div>
  </div>
  <div class="chatbot-input">
    <input type="text" id="chat-input" placeholder="Type your message..." />
    <button onclick="sendMessage()">Send</button>
  </div>
</div>


<script>
   function toggleChatbot() {
    const bot = document.getElementById("chatbot");
    bot.style.display = bot.style.display === "flex" ? "none" : "flex";
  }

  function sendMessage() {
    const input = document.getElementById("chat-input");
    const message = input.value.trim();
    if (!message) return;

    const chatBody = document.getElementById("chat-body");

    const userMsg = document.createElement("div");
    userMsg.className = "user-message";
    userMsg.innerText = message;
    chatBody.appendChild(userMsg);

    const botReply = document.createElement("div");
    botReply.className = "bot-message";

    if (message.toLowerCase().includes("lost")) {
      botReply.innerText = "You can report a lost item using the 'Report Lost Item' button on the homepage.";
    } else if (message.toLowerCase().includes("claim")) {
      botReply.innerText = "To claim an item, go to the item details and click 'Claim'.";
    } else if (message.toLowerCase().includes("otp")) {
      botReply.innerText = "Having OTP issues? Please make sure you're entering the code within 5 minutes.";
    } else {
      botReply.innerText = "Sorry, I didn‚Äôt quite get that. Please try asking something else or use the help form.";
    }

    chatBody.appendChild(botReply);
    chatBody.scrollTop = chatBody.scrollHeight;
    input.value = "";
  }
</script> 